<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.jthou.wanandroidkotlin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
            android:name=".base.App"
            android:allowBackup="true"
            android:icon="@drawable/ic_android_black_24dp"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@drawable/ic_android_black_24dp"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".activity.MainActivity"
                android:configChanges="orientation|keyboardHidden|fontScale|locale|layoutDirection|screenSize|smallestScreenSize|screenLayout|uiMode|navigation|keyboard|colorMode|density" />
        <activity
                android:name=".activity.SearchListActivity"
                android:configChanges="orientation|keyboardHidden|fontScale|locale|layoutDirection|screenSize|smallestScreenSize|screenLayout|uiMode|navigation|keyboard|colorMode|density" />
        <activity
                android:name=".activity.ArticleDetailActivity"
                android:configChanges="orientation|keyboardHidden|fontScale|locale|layoutDirection|screenSize|smallestScreenSize|screenLayout|uiMode|navigation|keyboard|colorMode|density" />
        <activity
                android:name=".activity.KnowledgeSystemDetailActivity"
                android:configChanges="orientation|keyboardHidden|fontScale|locale|layoutDirection|screenSize|smallestScreenSize|screenLayout|uiMode|navigation|keyboard|colorMode|density" />
        <activity
                android:name=".activity.SplashActivity"
                android:theme="@style/WelcomeTheme"
                android:configChanges="orientation|keyboardHidden|fontScale|locale|layoutDirection|screenSize|smallestScreenSize|screenLayout|uiMode|navigation|keyboard|colorMode|density">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>